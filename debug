
function DrawDebug()
	local function draw_direction(name, current, x_text_pos, y_text_pos)
		love.graphics.print(name, x_text_pos + 70, y_text_pos)
		love.graphics.print(current, x_text_pos + 10, y_text_pos)
	end

	local margin = 10
	local offset = 20
	local x_text_pos = love.graphics.getWidth() - margin - 100
	local y_text_pos = love.graphics.getHeight() - margin - 20

	draw_direction("x:", player.currentdirectionx, x_text_pos, y_text_pos)
	draw_direction("y:", player.currentdirectiony, x_text_pos, y_text_pos - offset)
end

function love.keypressed(key) --, scancode, isrepeat)--
	if key == "escape" then
		love.event.quit(1)
	end
end


--fonts 
local files = love.filesystem.getDirectoryItems("Fonts")
for _, file in ipairs(files) do
	if file:match("%.ttf$") then
		table.insert(fonts, love.graphics.newFont("Fonts/" .. file, fontSize))
	end
end


recalculate
	if #fonts > 0 then
		--currentFont = fonts[fontIndex]

	end


function love.keypressed(key) --, scancode, isrepeat)--
	if key == "space" and #fonts then
		fontIndex = fontIndex % #fonts + 1
		currentFont = fonts[fontIndex]
		love.graphics.setFont(currentFont)
	end
end


--enemy

function enemy:drawPath1()
	if not self.path then
		return
	end
	love.graphics.setColor(1, 0, 0)
	for _, node in ipairs(self.path) do
		local x, y = enemy.WorldTileToCoords(node.x, node.y)
		love.graphics.circle("fill", x, y, 4)
	end
	love.graphics.setColor(1, 1, 1)
end

function enemy:drawPath2()
	if #self.currentPath == 0 then
		return
	end

	love.graphics.setColor(1, 0, 0)
	for i, node in ipairs(self.currentPath) do
		local x = (node.x - 1) * 16 + 8
		local y = (node.y - 1) * 16 + 8
		love.graphics.circle("line", x, y, 4)

		if i > 1 then
			local prev = self.currentPath[i - 1]
			love.graphics.line(x, y, (prev.x - 1) * 16 + 8, (prev.y - 1) * 16 + 8)
		end
	end
	love.graphics.setColor(1, 1, 1)
end


